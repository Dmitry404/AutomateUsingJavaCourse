<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Test Login/Logout" >
  <test verbose="1" name="Check availability for pages" annotations="JDK">
    <groups>
      <run>
        <include name="sanity"/>
      </run>
    </groups>
    <classes>
      <class name="demotest.loginLogout"/>
      <class name="demotest.dataProviders.loginDataProvider"/>
      <class name="demotest.Driver"/>
    </classes>
  </test>

  <test verbose="1" name="Test Login/Logout" annotations="JDK">
    <groups>
      <run>
        <include name="login"/>
        <include name="logout"/>
        <exclude name="sanity"/>
      </run>
    </groups>
    <classes>
      <class name="demotest.loginLogout"/>
      <class name="demotest.dataProviders.loginDataProvider"/>
      <class name="demotest.Driver"/>
    </classes>
  </test>

</suite>